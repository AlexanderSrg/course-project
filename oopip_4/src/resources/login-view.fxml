<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
    <children>
        <Label layoutX="120.0" layoutY="30.0" text="ВХОД В МАГАЗИН" alignment="CENTER" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="90.0" text="Логин:" />
        <TextField fx:id="loginField" layoutX="130.0" layoutY="86.0" prefWidth="220.0" AnchorPane.leftAnchor="130.0" AnchorPane.rightAnchor="50.0" />

        <Label layoutX="50.0" layoutY="140.0" text="Пароль:" />
        <PasswordField fx:id="passwordField" layoutX="130.0" layoutY="136.0" prefWidth="220.0" AnchorPane.leftAnchor="130.0" AnchorPane.rightAnchor="50.0" />

        <Button layoutX="130.0" layoutY="210.0" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Войти" />
        <Button layoutX="200.0" layoutY="210.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Регистрация" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>