<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AdminPanelController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label layoutX="325.0" layoutY="14.0" text="Панель администратора: Каталог" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TableView fx:id="gamesTable" layoutX="14.0" layoutY="49.0" prefHeight="530.0" prefWidth="480.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="150.0" text="Название" />
                <TableColumn fx:id="priceCol" prefWidth="80.0" text="Цена" />
                <TableColumn fx:id="ratingCol" prefWidth="70.0" text="Рейтинг" />
                <TableColumn fx:id="playersCol" prefWidth="90.0" text="Мин. Игроков" />
                <TableColumn fx:id="descriptionCol" prefWidth="150.0" text="Описание" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox layoutX="500.0" layoutY="40.0" prefHeight="550.0" prefWidth="300.0" spacing="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0">
            <children>
                <Label text="Добавление новой игры" underline="true">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="Название:" />
                <TextField fx:id="nameField" />
                <Label text="Цена:" />
                <TextField fx:id="priceField" />
                <Label text="Рейтинг (1.0 - 5.0):" />
                <TextField fx:id="ratingField" />
                <Label text="Мин. Игроков:" />
                <TextField fx:id="minPlayersField" />
                <Label text="Описание:" />
                <TextArea fx:id="descriptionArea" prefHeight="80.0" />
                <Button mnemonicParsing="false" onAction="#onAddGameButtonClick" prefWidth="300.0" text="ДОБАВИТЬ ИГРУ" />
                <Separator prefWidth="200.0" />
                <Label text="Управление каталогом" underline="true">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#onDeleteGameButtonClick" prefWidth="300.0" text="УДАЛИТЬ ВЫБРАННУЮ ИГРУ" />
            </children>
        </VBox>
    </children>
</AnchorPane>